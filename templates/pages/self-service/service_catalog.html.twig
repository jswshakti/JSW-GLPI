{% extends "layout/page_without_tabs.html.twig" %}

{% set tabler_container_size = "xl" %}

{% block content_title %}
    {{ __('Service catalog') }}
{% endblock content_title %}

{% block content_body %}
    <section aria-label="{{ __("Forms") }}" class="row">
        {% for form in forms %}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
                <a
                    class="card mx-1 my-2 flex-grow-1"
                    href=" {{ "/Form/Render/" ~ form.fields.id }}"
                >
                    <section
                        class="card-body"
                        aria-labelledby="form-{{ form.fields.id }}"
                    >
                        <h2 id="form-{{ form.fields.id }}" class="card-title">
                            {{ form.fields.name }}
                        </h2>
                        {# TODO: showing description instead of header (description does not yet
                           exist and header is meant to be displated above the form in its own
                           page). We use header for now to "fill" the space. #}
                        <div class="text-secondary">{{ form.fields.header|raw }}</div>
                    </section>
                </a>
            </div>
        {% endfor %}
    </section>
{% endblock content_body %}
