<tr>
    <td class="text-nowrap">
        {% if lesson['id'] in completed_lessons %}
            <i class="ti ti-check text-success" data-toggle="tooltip" data-placement="top" title="{{ __('Lesson completed') }}"></i>
        {% else %}
            <a href="{{ path('front/discover.php?lessonId=' ~ lesson['id'] ~ '&action=start') }}" class="text-reset" data-toggle="tooltip" data-placement="top" title="{{ __('Play lesson') }}">
                <i class="ti ti-player-play text-primary"></i>
            </a>
        {% endif %}
    </td>
    <td class="w-100">
        <h4 class="m-0">
            {{ lesson['title'] }}
        </h4>
        <div class="text-truncate text-gray">
            {{ lesson['description'] }}
        </div>
    </td>
    <td class="text-nowrap text-secondary">
        {% if lesson['category'] %}
            <span class="badge bg-primary me-1">
                {{ lesson['category'] }}
            </span>
        {% endif %}
    </td>
    <td class="text-nowrap text-secondary">
        <span class="d-flex align-items-center gap-1">
            <i class="ti ti-coins"></i>
            {{ lesson['points']|default(0) }}
        </span>
    </td>
    <td class="text-nowrap text-secondary">
        <span class="d-flex align-items-center gap-1">
            <i class="ti ti-check"></i>
            {{ progression }}/{{ lesson['steps']|length }}
        </span>
    </td>
    <td class="text-nowrap text-secondary">
        <a href="{{ path('front/discover.php?lessonId=' ~ lesson['id'] ~ '&action=restart') }}" class="text-reset" data-toggle="tooltip" data-placement="top" title="{{ __('Restart lesson') }}">
            <span class="d-flex align-items-center gap-1">
                <i class="ti ti-refresh"></i>
            </span>
        </a>
    </td>
</tr>
