{% import 'components/form/fields_macros.html.twig' as fields %}
{% set field_options = field_options|default({}) %}

{% if type == 'string' %}
    {{ fields.textField(name, value, label, field_options + {
        additional_attributes: {
            maxlength: 255,
        },
    }) }}
{% elseif type == 'text' %}
    {{ fields.textareaField(name, value, label, field_options) }}
{% elseif type == 'url' %}
    {{ fields.urlField(name, value, label, field_options) }}
{% elseif type == 'number' %}
    {{ fields.numberField(name, value, label, field_options) }}
{% elseif type == 'date' %}
    {{ fields.dateField(name, value, label, field_options) }}
{% elseif type == 'datetime' %}
    {{ fields.datetimeField(name, value, label, field_options) }}
{% elseif type == 'bool' %}
    {{ fields.dropdownYesNo(name, value, label, field_options|merge({
        values: {}
    })) }}
{% elseif type == 'dropdown' %}
    {{ fields.dropdownField(itemtype, name, value, label, field_options|merge({
        values: value|default({}),
        entity: session('glpiactiveentities'),
    })) }}
{% elseif type == 'placeholder' %}
    {{ fields.nullField() }}
{% endif %}
